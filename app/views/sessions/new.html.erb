<!--■ページタイトル-->
<h1>ログイン画面</h1>

<!--■ログインのフォーム-->
<%= form_with(scope: :session, url: users_login_path, local: true) do |form| %>
  <div class="form_field">
    <%= form.label :email, "メールアドレス" %>
    <%= form.email_field :email %>
  </div>
  <div class="form_field">
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit "ログイン" %>
  <%= link_to "戻る", :back, type: "button", class: "btn btn-default" %>
<% end %>
